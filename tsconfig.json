{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "build", ".vscode"],
  "include": ["src/whServer.ts"],
  "types": ["node", "express"]
}
